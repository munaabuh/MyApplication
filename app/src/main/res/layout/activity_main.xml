<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Welcome to your Sanctum"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="26dp"/>

        <Button
            android:id="@+id/profileButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/profile"
            android:onClick="profile" />

        <RelativeLayout
            android:id="@+id/relativeLayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/search_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/search_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_marginLeft="55dp"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="@color/purple"/>

        </RelativeLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/mentalHealthCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="mentalHealth">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/image_bg"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/mentalhealth"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="7dp"
                    android:text="Mental Health"
                    android:textColor="@color/purple"
                    android:textSize="24dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="mindfulness"
                android:id="@+id/mindfulnessCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/image_bg"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/mindfulness" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mindfulness"
                    android:textSize="25dp"
                    android:textColor="@color/purple"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="30dp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/therapyCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/image_bg"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/therapy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Therapy"
                    android:textColor="@color/purple"
                    android:textSize="24dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="Insights"
            android:textColor="@color/purple"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/anxietyCard"
        android:onClick="anxiety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/list_d1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anxiety"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>



    </RelativeLayout>

       <HorizontalScrollView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <androidx.cardview.widget.CardView
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="30dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="150dp"
                       android:layout_height="200dp"
                       android:background="@drawable/image_bg"/>

                   <ImageView
                       android:layout_width="150dp"
                       android:layout_height="250dp"
                       android:layout_marginLeft="25dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="23dp"
                       android:layout_marginTop="7dp"
                       android:textColor="@color/purple"
                       android:textSize="24dp"
                       android:textStyle="bold" />

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_marginTop="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="150dp"
                       android:layout_height="200dp"
                       android:background="@drawable/image_bg"/>

                   <ImageView
                       android:layout_width="180dp"
                       android:layout_height="250dp"
                       android:layout_marginLeft="6dp"
                       android:layout_marginRight="3dp"
                        />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="25dp"
                       android:textColor="@color/purple"
                       android:textStyle="bold"
                       android:layout_marginTop="7dp"
                       android:layout_marginLeft="30dp" />

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_marginTop="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="150dp"
                       android:layout_height="200dp"
                       android:background="@drawable/image_bg"/>

                   <ImageView
                       android:layout_width="150dp"
                       android:layout_height="250dp"
                       android:layout_marginLeft="25dp"
                       android:layout_marginTop="12dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="55dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/purple"
                       android:textSize="24dp"
                       android:textStyle="bold" />

               </androidx.cardview.widget.CardView>

           </LinearLayout>

       </HorizontalScrollView>

   <RelativeLayout
           android:id="@+id/overthinkingCard"
           android:onClick="overthinking"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="380dp"
               android:layout_height="80dp"
               android:background="@drawable/list_d4"
               android:layout_marginRight="20dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="10dp"/>

           <ImageView
               android:layout_width="50dp"
               android:layout_height="60dp"
               android:layout_centerVertical="true"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="40dp"
               android:src="@drawable/overthinking"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Overthinking"
               android:textSize="20dp"
               android:textColor="@color/purple"
               android:textStyle="bold"
               android:layout_marginLeft="105dp"
               android:layout_marginTop="20dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Causes, effects, treatments"
               android:textSize="14dp"
               android:textColor="@color/purple"
               android:textStyle="bold"
               android:layout_marginLeft="105dp"
               android:layout_marginTop="50dp"/>

       </RelativeLayout>

    <RelativeLayout
           android:id="@+id/stressCard"
           android:onClick="stress"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="380dp"
               android:layout_height="80dp"
               android:background="@drawable/list_d3"
               android:layout_marginRight="20dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="10dp"/>

           <ImageView
               android:layout_width="50dp"
               android:layout_height="60dp"
               android:layout_centerVertical="true"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="40dp"
               android:src="@drawable/stress"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Stress"
               android:textSize="20dp"
               android:textColor="@color/purple"
               android:textStyle="bold"
               android:layout_marginLeft="105dp"
               android:layout_marginTop="20dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Causes, effects, treatments"
               android:textSize="14dp"
               android:textColor="@color/purple"
               android:textStyle="bold"
               android:layout_marginLeft="105dp"
               android:layout_marginTop="50dp"/>

       </RelativeLayout>

   <RelativeLayout
           android:id="@+id/depressionCard"
           android:onClick="depression"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="380dp"
               android:layout_height="80dp"
               android:background="@drawable/list_d2"
               android:layout_marginRight="20dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="10dp"/>

           <ImageView
               android:layout_width="50dp"
               android:layout_height="60dp"
               android:layout_centerVertical="true"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="40dp"
               android:src="@drawable/depression"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Depression"
               android:textSize="20dp"
               android:textColor="@color/purple"
               android:textStyle="bold"
               android:layout_marginLeft="105dp"
               android:layout_marginTop="20dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Causes, effects, treatments"
               android:textSize="14dp"
               android:textColor="@color/purple"
               android:textStyle="bold"
               android:layout_marginLeft="105dp"
               android:layout_marginTop="50dp"/>

       </RelativeLayout>

   </LinearLayout>

</ScrollView>
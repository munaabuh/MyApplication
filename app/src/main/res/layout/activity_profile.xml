<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Personal Dashboard"
            android:textColor="@color/purple"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/profile"/>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewProfile"
            />

        <Button
            android:id="@+id/remindersButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@drawable/button_bg2"
            android:onClick="reminders"
            android:layout_marginBottom="50dp"
            android:text="Set a new reminder"
            android:textAllCaps="false"
            android:textColor="@color/purple"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/appointmentButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@drawable/button_bg2"
            android:onClick="reminders"
            android:text="Set a new appointment"
            android:textAllCaps="false"
            android:textColor="@color/purple"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/therapistsButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:background="@drawable/button_bg2"
            android:onClick="reminders"
            android:text="Find your new therapist"
            android:textAllCaps="false"
            android:textColor="@color/purple"
            android:textSize="20dp"
            android:textStyle="normal" />
    </RelativeLayout>

</LinearLayout>
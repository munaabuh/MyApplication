<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cream"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pink"
                android:layout_marginTop="40dp">
            </com.mikhaellopez.circularimageview.CircularImageView>

            <TextView
                android:id="@+id/userTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera / Gallery"
                android:layout_marginBottom="7dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/purple"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal">

                <TextView
                    android:onClick="reminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Reminders"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg2"
                    android:textColor="@color/darkPink"/>

                <TextView
                    android:onClick="appointments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39dp"
                    android:layout_marginRight="39dp"
                    android:gravity="center"
                    android:text="Appointments"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg2"
                    android:textColor="@color/darkPink"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="My Therapists"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="myTherapists"
                    android:background="@drawable/button_bg2"
                    android:textColor="@color/darkPink"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@color/pink"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:text=""
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:drawableStart="@drawable/person_icon"
                    android:textColor="@color/darkPink"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:text=""
                    android:id="@+id/surName"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:drawableStart="@drawable/pen_icon"
                    android:textStyle="bold"
                    android:textColor="@color/darkPink"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:text=""
                    android:textSize="16dp"
                    android:gravity="center"
                    android:id="@+id/email"
                    android:drawableStart="@drawable/email_icon"
                    android:textStyle="bold"
                    android:textColor="@color/darkPink"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:text=""
                    android:id="@+id/birthday"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:drawableStart="@drawable/calendar_icon"
                    android:textStyle="bold"
                    android:textColor="@color/darkPink"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:text=""
                    android:textSize="16dp"
                    android:gravity="center"
                    android:id="@+id/password"
                    android:drawableStart="@drawable/lock_icon"
                    android:textStyle="bold"
                    android:textColor="@color/darkPink"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_margin="30dp">

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/pink">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Journal"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="20dp"
                        android:textColor="@color/darkPink"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:textSize="18dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:backgroundTint="@color/purple"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Favorite Articles"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:textColor="@color/darkPink"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>